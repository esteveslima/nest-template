{
  "name": "nest-container",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --watch --debug 0.0.0.0:9229",
    "start:env": "set -o allexport && . assets/environment/.env && set +o allexport && nest start --watch",
    "debug": "node --inspect=0.0.0.0:9229 $INIT_CWD/node_modules/.bin/nest start --debug --watch",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "echo disabled: 'jest' && exit 0",
    "test:watch": "echo disabled: 'jest --watch' && exit 0",
    "test:cov": "echo disabled: 'jest --coverage' && exit 0",
    "test:debug": "echo disabled: 'node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand' && exit 0",
    "test:e2e": "echo disabled: 'jest --config ./test/jest-e2e.json' && exit 0",
    "prepare": "husky install assets/environment/.husky"
  },
  "lint-staged": {
    "**.{js,ts}": [
      "npx eslint --fix",
      "npm run test -- --findRelatedTests --bail"
    ],
    "**.ts": [
      "bash -c tsc --noEmit"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {
    "@bull-board/express": "^4.10.0",
    "@nestjs/apollo": "^10.0.5",
    "@nestjs/bull": "^0.6.2",
    "@nestjs/common": "^8.0.0",
    "@nestjs/config": "^1.1.0",
    "@nestjs/core": "^8.0.0",
    "@nestjs/event-emitter": "^1.0.0",
    "@nestjs/graphql": "^10.0.5",
    "@nestjs/jwt": "^8.0.0",
    "@nestjs/mapped-types": "^1.0.0",
    "@nestjs/passport": "^8.0.1",
    "@nestjs/platform-express": "^8.0.0",
    "@nestjs/swagger": "^5.2.0",
    "@nestjs/typeorm": "^8.0.2",
    "apollo-server-express": "^3.6.3",
    "bcrypt": "^5.0.1",
    "bull": "^4.10.2",
    "class-transformer": "^0.4.0",
    "class-validator": "^0.13.1",
    "express-basic-auth": "^1.2.1",
    "graphql": "^16.3.0",
    "graphql-query-complexity": "^0.11.0",
    "nestjs-pino": "^2.5.2",
    "pg": "^8.7.1",
    "pino-http": "^6.6.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.2.0",
    "swagger-ui-express": "^4.3.0",
    "typeorm": "^0.2.41",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^15.0.0",
    "@commitlint/config-conventional": "^15.0.0",
    "@nestjs/cli": "^8.0.0",
    "@nestjs/schematics": "^8.0.0",
    "@nestjs/testing": "^8.0.0",
    "@types/bcrypt": "^5.0.0",
    "@types/express": "^4.17.13",
    "@types/jest": "27.0.2",
    "@types/node": "^16.0.0",
    "@types/passport": "^1.0.7",
    "@types/passport-jwt": "^3.0.6",
    "@types/supertest": "^2.0.11",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "commitizen": "^4.2.4",
    "cz-conventional-changelog": "^3.2.0",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.4",
    "jest": "^27.2.5",
    "lint-staged": "^13.1.0",
    "prettier": "^2.3.2",
    "source-map-support": "^0.5.20",
    "supertest": "^6.1.3",
    "ts-jest": "^27.0.3",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.0.0",
    "tsc": "^2.0.4",
    "tsconfig-paths": "^3.10.1",
    "typescript": "^4.9.4"
  }
}
